<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnBoardingAssg" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryVariant">@color/dark_sky_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OnBoardingImage">
        <item name="android:elevation">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="shapeAppearanceOverlay">@style/roundedImageViewRounded</item>
        <item name="contentPadding">16dp</item>
    </style>


    <style name="MediumTextBlack16">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">80</item>
    </style>

    <style name="MediumTextBlack20" parent="MediumTextBlack16">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MediumTextBlack24" parent="MediumTextBlack16">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BlueBoldText24" parent="MediumTextBlack16">
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="SemiBoldParent">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SemiBold16" parent="SemiBoldParent">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyFlatButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/SemiBold16</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="NormalFlatButton" parent="MyFlatButton">
        <item name="android:background">@drawable/normal_flat_btn_bkg</item>
    </style>

    <style name="GreenFlatButton" parent="MyFlatButton">
        <item name="android:background">@drawable/green_btn_bkg</item>
    </style>

    <style name="PinkFlatButton" parent="MyFlatButton">
        <item name="android:background">@drawable/pink_btn_bkg</item>
    </style>



</resources>